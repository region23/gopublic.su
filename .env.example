# GoPublic Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Root domain for your server (enables HTTPS mode if set)
# Example: tunnel.example.com
DOMAIN_NAME=

# Project name for branding on landing page
# Default: Go Public
PROJECT_NAME=Go Public

# Email for Let's Encrypt certificate registration (required if DOMAIN_NAME is set)
EMAIL=

# Set to "true" to use HTTP instead of HTTPS (for local development)
# Default: false
INSECURE_HTTP=false

# Path to SQLite database file
# Default: gopublic.db
DB_PATH=gopublic.db

# Control plane port for tunnel connections
# Default: :4443
CONTROL_PLANE_PORT=:4443

# =============================================================================
# USER LIMITS
# =============================================================================

# Number of random domains assigned to each new user
# Default: 2
DOMAINS_PER_USER=2

# Daily bandwidth limit per user in megabytes (0 = unlimited)
# Default: 100
DAILY_BANDWIDTH_LIMIT_MB=100

# =============================================================================
# AUTHENTICATION - TELEGRAM
# =============================================================================

# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Telegram bot username (without @)
TELEGRAM_BOT_NAME=

# Use legacy Telegram Login Widget instead of bot-based auth
# Widget requires phone number which may scare users
# Bot-based auth uses deep links (t.me/bot?start=hash) - no phone needed
# Default: false (use new bot-based auth)
TELEGRAM_OAUTH_WIDGET_ENABLED=false

# =============================================================================
# AUTHENTICATION - YANDEX
# =============================================================================

# Yandex OAuth application client ID
# Register at: https://oauth.yandex.com/
YANDEX_CLIENT_ID=

# Yandex OAuth application client secret
YANDEX_CLIENT_SECRET=

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Telegram user ID for receiving abuse reports
# Get your ID from @userinfobot
ADMIN_TELEGRAM_ID=

# =============================================================================
# ERROR TRACKING - SENTRY
# =============================================================================

# Sentry DSN for error tracking
# Get your DSN at: https://sentry.io/
SENTRY_DSN=

# Environment name for Sentry (production, staging, development)
# Default: development
SENTRY_ENVIRONMENT=development

# Sample rate for error tracking (0.0 - 1.0, where 1.0 = 100%)
# Default: 1.0
SENTRY_SAMPLE_RATE=1.0

# =============================================================================
# OPTIONAL
# =============================================================================

# GitHub repository for client downloads (e.g., "username/gopublic")
GITHUB_REPO=

# Session cookie signing key (32 bytes, hex-encoded)
# Generate with: openssl rand -hex 32
# If not set, random keys are generated (dev mode only)
SESSION_HASH_KEY=

# Session cookie encryption key (32 bytes, hex-encoded)
# Generate with: openssl rand -hex 32
# If not set, random keys are generated (dev mode only)
SESSION_BLOCK_KEY=
